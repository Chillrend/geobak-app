<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/content_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/large_spacing">
        <ImageView
                android:id="@+id/tenant_image_history_rv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_fork_n_spoon"/>
        <TextView
                android:id="@+id/tenant_product_history_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/medium_spacing"
                android:layout_toRightOf="@id/tenant_image_history_rv"
                android:text="Sate Babiq"/>

        <TextView
                android:id="@+id/seller_name_history_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="@dimen/medium_spacing"
                android:layout_marginTop="@dimen/medium_spacing"
                android:layout_toRightOf="@id/tenant_image_history_rv"
                android:layout_below="@id/tenant_product_history_rv"
                android:text="Pak Joshua"/>
        <TextView
                android:id="@+id/price_history_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="@dimen/medium_spacing"
                android:layout_toRightOf="@id/tenant_image_history_rv"
                android:layout_below="@id/seller_name_history_rv"
                android:text="Rp. 20.000"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
            <TextView
                    android:id="@+id/date_history_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="@dimen/medium_spacing"
                    android:layout_alignParentRight="true"
                    android:text="29 Agustus 2019"/>


            <TextView
                    android:id="@+id/time_history_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="@dimen/medium_spacing"
                    android:layout_below="@id/date_history_tx"
                    android:layout_alignParentRight="true"
                    android:text="19:40"/>
        </LinearLayout>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ACB1BA"/>
</LinearLayout>